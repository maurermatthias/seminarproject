package knowledgestructureelements;

import java.util.HashMap;

import test2.DBConnector;

public class CompetenceState {
	HashMap<Competence, Double> map = new HashMap<Competence, Double>();
	public String username;
	public int cstructureId;
	
	public CompetenceState(String userName, String className){
		this.username = userName;
		this.cstructureId = DBConnector.getCstructureIdByClassId(DBConnector.getClassIdByName(className));
		CompetenceStructure compStr = DBConnector.getCompetenceStructure(cstructureId);
		//create initial competence state -> watch out when having circles!
		for(Competence competence : compStr.competences){
			map.put(competence,0.0);
		}
	}
	
	public boolean store(){
		return true;
	}
	
}
